<%= form_for @tender, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :procurring_entity_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :procurring_entity_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tender_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tender_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tender_registration_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tender_registration_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tender_status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tender_status, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tender_announcement_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :tender_announcement_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bid_start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :bid_start_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bid_end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :bid_end_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estimated_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :estimated_value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :include_vat, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :include_vat, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cpv_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cpv_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :winning_bid_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :winning_bid_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :start_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :end_date, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tenders_path, :class => 'btn' %>
  </div>
<% end %>
